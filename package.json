{
  "name": "bytemd",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf packages/**/*/dist",
    "build": "tsc --build && node -r esm scripts/process.js && rollup -c",
    "build:umd": "tsc --build && UMD=1 rollup -c",
    "dev": "run-p dev:bundle dev:tsc dev:process",
    "dev:bundle": "rollup -cw",
    "dev:tsc": "tsc --build --watch",
    "dev:process": "node -r esm scripts/process.js --watch",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "postinstall": "node -r esm scripts/generate.js",
    "prepublishOnly": "npm run build",
    "pub": "lerna publish --registry=https://registry.npmjs.org"
  },
  "devDependencies": {
    "@primer/css": "^15.0.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/svelte": "^3.0.0",
    "@types/jest": "^26.0.4",
    "esm": "^3.2.25",
    "fs-extra": "^9.0.1",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "mustache": "^4.0.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.15.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-svelte": "^5.2.2",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-visualizer": "^4.0.4",
    "rollup-plugin-vue": "^5.1.9",
    "svelte-jester": "^1.0.6",
    "svelte-preprocess": "^4.3.2",
    "ts-jest": "^26.1.1",
    "typescript": "^4.0.3",
    "vue-template-compiler": "^2.6.12"
  }
}

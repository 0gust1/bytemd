{
  "name": "@bytemd/monorepo",
  "version": "1.13.0",
  "private": true,
  "scripts": {
    "build": "npm run clean && norm build",
    "clean": "rm -rf packages/*/dist",
    "dev": "norm",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:serve": "vitepress serve docs",
    "format": "norm format",
    "postinstall": "node scripts/postinstall.mjs && npm run format && sort-json packages/*/locales/*.json",
    "pub": "npm run build && norm version && pnpm --recursive --registry https://registry.npmjs.org/ publish --access public",
    "test": "vitest"
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@icon-park/svg": "^1.3.5",
    "@norm/cli": "^0.4.31",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.41",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^3.1.0",
    "@types/lodash-es": "^4.17.6",
    "@vitejs/plugin-vue": "^2.3.1",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.1",
    "jsdom": "^19.0.0",
    "local-pkg": "^0.4.1",
    "lodash-es": "^4.17.21",
    "mustache": "^4.2.0",
    "prettier-plugin-svelte": "^2.6.0",
    "sass": "^1.49.11",
    "sort-json": "^2.0.1",
    "svelte": "^3.46.6",
    "svelte-preprocess": "^4.10.5",
    "typescript": "^4.6.3",
    "vite-plugin-vue2": "^1.9.3",
    "vitepress": "^0.22.3",
    "vitest": "^0.8.4",
    "vue-template-compiler": "^2.6.14"
  },
  "packageManager": "pnpm@6.32.2",
  "bundlewatch": {
    "files": [
      {
        "path": "packages/*/dist/index.js"
      }
    ],
    "ci": {
      "repoBranchBase": "main",
      "trackBranches": [
        "main"
      ]
    }
  }
}
